
<div class="page-data">
    <div class="data-btn">
        <a href = "/user/add">+ Add</a>
    </div>
    <div class="data-table">
        <table border="1" cellpadding="7" cellspacing="7">
            <tr>
               
                <th>name</th>
                <th>username</th>
                <th>email</th>
                
                <th>location</th>
                <th width="120px">Action</th>
            </tr>
             {{#each users}}
            <tr>
              
                <td>{{name}}</td>
                <td>{{username}}</td>
                <td>{{email}}</td>
                
                <td>{{location}}</td>
                <td>
                    <a class="a-inside edit" href="../user/edit/{{id}}">Edit</a>
                    <a class="a-inside delete" href="../user/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>